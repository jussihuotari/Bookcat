<div class="container">
  <div class="row">
    <div class="offset-col-md2 col-md-6">
      <div class="authform">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
          <h3>
            Salasana
            <%- if devise_mapping.recoverable? %>
              <small><%= link_to "Forgot?", new_password_path(resource_name), class: '' %></small>
            <% end -%></h3>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%- if devise_mapping.registerable? %>
              <%# link_to 'Sign up', new_registration_path(resource_name), class: 'right'  %>
            <% end -%>
            <%# f.label :email %>
            <%# f.email_field :email, :autofocus => true, class: 'form-control', hidden: true, value: Rails.application.secrets.db_username %>
            <%= f.hidden_field :email, value: Rails.application.secrets.app_admin_email %>
          </div>
          <div class="form-group" style="margin-top: 40px;">
            <%# f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <%= f.submit 'Valmis', :class => 'btn btn-lg btn-primary' %>
          <% if devise_mapping.rememberable? -%>
            <%= f.hidden_field :remember_me, value: "true" %>
          <% end -%>
        <% end %>
      </div>
    </div>
  </div>
</div>

